@model ContractViewer.Models.PublicContractViewModel
@using GridMvc.Html

@{
    ViewBag.Title = "Public Contracts";
}

<div class="row">
    <div class="col-md-10  col-md-offset-1">
        <h2>Veřejné zakázky subjektu - @Model.Name IČ @Model.Id</h2>

        <hr />

        <div class="row">
            @Html.Grid(Model.PublicContract).Columns(columns => columns.Add(model => model.EvNumber)
        .Titled("Evidenční číslo ISVZUS")
        .Encoded(false)
        .Sanitized(false)
        .RenderValueAs(d => @<a href=@HttpUtility.UrlPathEncode("http://linked.opendata.cz/resource/domain/buyer-profiles/contract/cz/" + d.EvNumber)>@d.EvNumber</a> )).AutoGenerateColumns().WithPaging(20).Sortable().Filterable().WithGridItemsCount("Počet nalezených veřejných zakázek")
        </div>
    </div>
</div>

